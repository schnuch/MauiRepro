<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
			 x:Class="MauiRepro.MainPage">

	<ScrollView>
		<VerticalStackLayout
			Spacing="25"
			Padding="25"
			WidthRequest="400"
			VerticalOptions="Center"
			BackgroundColor="AliceBlue"
		>

			<Border Background="Transparent" HeightRequest="200">
				<tk:DrawingView
					x:Name="Canvas"
					Background="Transparent"
					BackgroundColor="Transparent"
					IsMultiLineModeEnabled="True"
					LineWidth="3"
					LineColor="RoyalBlue"
				/>
			</Border>

			<Button Text="Save" Clicked="Save_Clicked" />

			<Border Background="Transparent" BackgroundColor="Transparent">
				<Image x:Name="imgSaved" Background="Transparent" BackgroundColor="Transparent"/>
			</Border>

		</VerticalStackLayout>
	</ScrollView>

</ContentPage>
